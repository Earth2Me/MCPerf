<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
	<id>Full</id>
	<formats>
		<format>jar</format>
	</formats>
	<componentDescriptors>
		<componentDescriptor>src/main/assembly/common/all.xml</componentDescriptor>
		<componentDescriptor>src/main/assembly/common/paid.xml</componentDescriptor>
	</componentDescriptors>
	<fileSets>
		<!--
		<fileSet>
			<directory>${basedir}/assembly/builds/full</directory>
		</fileSet>
		-->
		<fileSet>
			<outputDirectory>.</outputDirectory>
			<directory>${basedir}/assembly/common</directory>
			<includes>
				<include>**/*</include>
			</includes>
			<filtered>true</filtered>
		</fileSet>
		<fileSet>
			<outputDirectory>.</outputDirectory>
			<directory>${basedir}/assembly/paid</directory>
			<includes>
				<include>**/*</include>
			</includes>
			<filtered>true</filtered>
		</fileSet>
		<fileSet>
			<outputDirectory>.</outputDirectory>
			<directory>${basedir}/assembly/builds/full</directory>
			<includes>
				<include>**/*</include>
			</includes>
			<filtered>true</filtered>
		</fileSet>
	</fileSets>
</assembly>